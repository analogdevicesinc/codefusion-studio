{
  "extends": ["../../.eslintrc.json", "plugin:cypress/recommended"],
  "rules": {},
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "node_modules/**/*",
    "vite.config.*.ts",
    "vite.config.ts",
    "vite-*.ts",
    "vite.plugin.*.ts",
    "out/**/*",
    "cypress/**/*",
    "cypress.config.ts",
    "src/**/*",
    "!src/tests/",
    "!src/tests/**/",
    "!src/tests/**/*.ts",
    "!src/tests/**/*.tsx",
    "src/tests/**/.vscode/**/*",
    "build-scripts"
  ],
  "overrides": [
    {
      "files": ["src/tests/**/*.ts", "src/tests/**/*.tsx"],
      "extends": ["plugin:cypress/recommended"]
    },
    {
      "files": ["*.test.ts"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
